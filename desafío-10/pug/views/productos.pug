doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title Document
    body 
        a(class="btn btn-primary" href="/" role="button") Cargar nuevos items
        table(class="table container") 
            thead(class="table-dark") 
                th(scope="col" class="display-6") Producto
                th(scope="col" class="display-6") Imagen 
                th(scope="col" class="display-6") Precio 
            tbody 
                each item in data 
                    tr 
                        th(scope="row")
                            p(style="text-transform: uppercase; font-size:20px")= item.title
                        th(scope="row")
                            img(src=item.thumbnail, alt=item.title, srcset="" style="width: 70px")
                        th(scope="row")
                            p(style="text-transform: uppercase; font-size:20px")= item.price 

